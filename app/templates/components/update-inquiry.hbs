{{#if updateInquiryForm}}
    <h4>Update{{inquiry.greatQuestion}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=inquiry.author}}
      </div>

      <div class="form-group">
        <label for="greatQuestion">What is your question?</label>
        {{input value=greatQuestion id="greatQuestion" placeholder=inquiry.greatQuestion}}
      </div>

      <div class="form-group">
        <label for="notes">What notes do you have</label>
        {{input value=notes id="notes" placeholder=inquiry.notes}}
      </div>


      <button {{action 'update' inquiry}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateInquiryForm'}}>Update</button>
{{/if}}
